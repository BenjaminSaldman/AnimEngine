<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical"
    tools:context=".SelectActivity">

    <LinearLayout
        android:id="@+id/liShowSerie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/big_white_base"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="250dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageID"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/animeNameSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name_se"
            android:textColor="@color/purple_500"
            android:padding="10dp"
            android:textSize="28dp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/animeGenre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="ksdajfpasjfpasdsdjfnaasdjf"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/star1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/full_star"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/star2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/full_star"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/star3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/full_star"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/star4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/full_star"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="20dp"/>

            <ImageView
                android:id="@+id/star5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/full_star"/>

            <Space
                android:layout_width="10dp"
                android:layout_height="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">


            <TextView
                android:id="@+id/tvSE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="s1 | e1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="26dp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ibLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/like"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"/>

    <ImageButton
        android:id="@+id/ibUnLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/unlike"
        android:layout_gravity="bottom|left"
        android:layout_margin="20dp"/>

</FrameLayout>